---
version: "3"

services:
  horizon-nginx-proxy:
    image: kinecosystem/horizon-nginx-proxy:c2c4b5e
    container_name: horizon-nginx-proxy

    network_mode: host

    environment:
      PROXY_LISTEN_PORT: 80
      PROXY_READ_TIMEOUT: 60
      # horizon listens on port 8000
      PROXY_PASS_URL: http://localhost:8000
      # Set host for Horizon's response links, leave as $$host for the links to show the original request host(localhost)
      HOST: "horizon-{{horizon.network.name}}.kininfrastructure.com"


    restart: on-failure
    logging:
      driver: json-file
      options:
        max-size: 100m
        max-file: "3"


